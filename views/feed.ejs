<div class="container" ng-controller="FeedCtrl">
  <div class="row">
    <div class="col-md-6">
      <div class="page-header" style="padding: 0; margin: 0; margin-bottom: 20px;">
        <h1 style="margin-top: 10px;">
          Job Feed
          <small>In case you missed something</small>
